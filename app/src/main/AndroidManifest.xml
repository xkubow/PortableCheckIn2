<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.tsystems.portablecheckin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="cz.tsystems.data.PortableCheckin"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <service android:name="cz.tsystems.communications.CommunicationService" />

        <activity
            android:name="cz.tsystems.portablecheckin.WelcomeActivity"
            android:background="@drawable/welcome"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.tsystems.portablecheckin.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/TransparentActivity" />
        <activity
            android:name="cz.tsystems.portablecheckin.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="cz.tsystems.portablecheckin.ServiceActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="cz.tsystems.base.FragmentPagerActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity
            android:name="cz.tsystems.communications.NotificationReceiverActivity"
            android:launchMode="singleTop"
            android:theme="@style/TransparentActivity" />
        <activity android:name="cz.tsystems.base.BaseListGridActivity" />
        <activity android:name="cz.tsystems.base.BaseListActivity" />
        <activity
            android:name="cz.tsystems.portablecheckin.item_unit"
            android:label="@string/title_activity_item_unit" >
        </activity>
        <activity
            android:name="cz.tsystems.portablecheckin.title_bar"
            android:label="@string/title_activity_title_bar" >
        </activity>
    </application>

</manifest>
