<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_caption"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblProtokol"
        android:layout_below="@+id/include2"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/txtProtokol"
        android:layout_below="@+id/lblProtokol"
        android:layout_alignParentStart="true"
        android:gravity="left|top"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/space"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblZakazkoviList"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/lblProtokol"
        android:layout_toEndOf="@+id/space" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtZakazList"
        android:gravity="left|top"
        android:layout_below="@+id/lblProtokol"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtProtokol"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

</RelativeLayout>
