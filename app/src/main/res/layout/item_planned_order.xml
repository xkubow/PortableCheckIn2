<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="9.7"
    android:padding="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/lbldataSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lblPlannedOrderStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lblLicenseTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lblVehicleDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lblCustomerLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lblPlannedOrderNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="1"
        android:lines="1" />

</LinearLayout>
