<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.tsystems.grids.BaseGridActivity"
    android:id="@+id/baseGrdLayaut"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:background="@color/white">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_caption"
        android:id="@+id/captionInclude" />

    <com.hb.views.PinnedSectionListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:layout_below="@+id/columnsLayout"
        android:layout_alignRight="@+id/columnsLayout"
        android:layout_alignEnd="@+id/columnsLayout" />
</LinearLayout>

