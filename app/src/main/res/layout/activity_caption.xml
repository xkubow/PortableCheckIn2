<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/lightGray">

    <Button
        android:id="@+id/btnBrand"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@drawable/brand_nologo"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/lblCheckIn_nr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="CHECKIN_NUMBER"
        android:text="@string/CheckInNR"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@id/btnBrand"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/lblLoggetUser" />

    <TextView
        android:id="@+id/lblLoggetUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LogetUser"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@id/btnBrand"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Large Text"
        android:id="@+id/lblCarCaption"
        android:layout_gravity="left|top"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black" />

</RelativeLayout>
