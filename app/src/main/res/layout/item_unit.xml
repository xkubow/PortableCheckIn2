<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/lblPosition"
        android:layout_below="@+id/lblText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnOdloz"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_drawer_grey"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnService"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/btnOdloz"
        android:layout_toStartOf="@+id/btnOdloz"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_tools_grey" />

    <com.gc.materialdesign.views.CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/btnService"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_centerVertical="true"
        android:background="#006384"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblCena"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/lblRequired"
        android:layout_alignBottom="@+id/lblPosition"
        android:layout_toRightOf="@+id/lblPosition"
        android:layout_toEndOf="@+id/lblPosition"
        android:layout_marginLeft="20dp" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.gc.materialdesign.views.ButtonFloat"
        android:id="@+id/btnDell"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#006384"
        materialdesign:iconDrawable="@drawable/ic_highlight_remove_white_36dp"
        android:layout_marginRight="30dp"
        android:visibility="invisible" />

</RelativeLayout>
