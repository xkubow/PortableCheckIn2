<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cz.tsystems.portablecheckin.Item_packet"
    android:background="@drawable/list_selector">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/packetText"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/packetImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/detailText"
        android:layout_toEndOf="@+id/packetImageView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/packetText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/packetImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/btnInfo"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_info_outline_grey600_36dp"
        android:layout_marginRight="16dp" />

    <com.gc.materialdesign.views.CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkPaket"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:background="#006384"
        android:visibility="visible"
        android:layout_toStartOf="@id/btnInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblCena"
        android:layout_alignParentRight="false"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/chkPaket" />


</RelativeLayout>
